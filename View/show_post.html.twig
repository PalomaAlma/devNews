{% extends 'base.html.twig' %}

    {% block main %}

        <section class="py-5 text-center container w-100">

            <div class="card mx-auto text-center">
                <div class="card-body">
                    <h2 class="card-title">{{ post.title }}</h2>
                    <p class="card-text">
                        <small>{{ post.chapo }}</small>
                        <br>
                        {{ post.content|raw }}
                    </p>
                </div>
            </div>

        </section>

        <form action="/post/show/{{ post.id }}" method="POST" class="text-center">
            <h2>Laisser un commentaire</h2>
            <div class="input-group my-2">
                <label for="firstname" class="input-group-text">Pr√©nom</label>
                <input type="text" name="firstname" id="firstname" class="form-control">
            </div>
            <div class="input-group my-2">
                <label for="lastname" class="input-group-text">Nom</label>
                <input type="text" name="lastname" id="lastname" class="form-control">
            </div>
            <div class="input-group my-2">
                <label for="content" class="input-group-text">Commentaire</label>
                <input type="text" name="content" id="content" class="form-control">
            </div>
            <input type="hidden" name="createdAt" value="{{ 'now'|date('Y-m-d') }}">
            <input type="hidden" name="isValid" value="0">
            <input type="hidden" name="post_id" value="{{ post.id }}">
            <button type="submit" class="btn mx-auto w-100">Envoyer</button>
        </form>

    {% endblock %}